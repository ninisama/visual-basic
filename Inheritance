Module HwInherit1
    Public Class shoes
        Private brand As String
        Private price As Single

        Public Sub setbrand(ByVal b As String)
            brand = b
        End Sub

        Public Sub setprice(ByVal p As String)
            price = p
            discount()
        End Sub

        Public Function getbrand()
            Return brand
        End Function

        Public Function getprice()
            Return price
        End Function

        Private Sub discount()
            Select Case price
                Case 5000 To 10000
                    price = price * 0.95
                Case 10001 To 20000
                    price = price * 0.92
                Case Is > 20000
                    price = price * 0.9
            End Select
        End Sub
    End Class

    Public Class sport : Inherits shoes
        Private mesh As Integer
        Private weight As Single

        Public Sub setmesh(ByVal m As Integer)
            mesh = m
        End Sub

        Public Sub setweight(ByVal w As Single)
            weight = w
            addon()
        End Sub

        Public Function getmesh()
            Return mesh
        End Function

        Public Function getweight()
            Return weight
        End Function
        Private Sub addon()

            Select Case mesh
                Case 0 To 100
                    weight = weight * 1.1
                Case 101 To 300
                    weight = weight * 1.15
                Case 301 To 500
                    weight = weight * 1.22
                Case Is > 501
                    weight = weight * 1.28
            End Select

        End Sub

        Public Sub display()
            Console.WriteLine("Brand: " & MyBase.getbrand)
            Console.WriteLine("Price: " & MyBase.getprice)
            Console.WriteLine("Mesh: " & getmesh())
            Console.WriteLine("Weight: " & getweight())
        End Sub
    End Class

    Sub main()
        Dim nike As New sport
        Console.WriteLine("Input brand of shoe")
        nike.setbrand(Console.ReadLine)
        Console.WriteLine("Input price of shoe")
        nike.setprice(Console.ReadLine)
        Console.WriteLine("Input mesh of shoe")
        nike.setmesh(Console.ReadLine)
        Console.WriteLine("Input weight of shoe")
        nike.setweight(Console.ReadLine)
        nike.display()
        Console.ReadLine()
    End Sub
End Module


Module HwInherit2
    Public Class ship
        Private speed, length As Integer
        Private weight As Single

        Public Sub setspeed(ByVal s As Integer)
            speed = s
        End Sub

        Public Function getspeed()
            Return speed
        End Function

        Public Sub setlength(ByVal l As Integer)
            length = l
        End Sub

        Public Function getlength()
            Return length
        End Function

        Private Sub weighting()
            Select Case length
                Case 0 To 100
                    weight = 10000
                Case 101 To 150
                    weight = 35000
                Case 151 To 300
                    weight = 97000
                Case Is > 300
                    weight = 110000
            End Select
        End Sub

        Public Function getweight()
            weighting()
            Return weight
        End Function

        Public Sub displayship()
            Console.WriteLine("Speed: {0}, Length: {1}, Weight: {2}", getspeed, getlength, getweight)
        End Sub
    End Class

    Public Class carrier : Inherits ship
        Private listweapon(4) As String
        Private nummissile As Integer

        Public Sub setweapon(ByVal i As Integer, ByVal w As Integer)
            listweapon(i) = w
        End Sub

        Public Sub getweapon()
            For i = 1 To 4
                Console.WriteLine("Weapon {0}: {1}", i, listweapon(i))
            Next
        End Sub
        Public Sub setnummissile(ByVal m As Integer)
            nummissile = m
        End Sub

        Public Function getnummissile()
            Return nummissile
        End Function

        Public Sub addweight(ByRef w As Single)
            w = w * 1.15
            Console.WriteLine("New weight: " & w)
        End Sub

        Public Sub displaycarrier()
            displayship()
            getweapon()
            Console.WriteLine("Number of missiles: {0}", getnummissile)
            addweight(MyBase.getweight)
        End Sub
    End Class

    Public Class aircraft : Inherits carrier
        Private listairplane(4) As String

        Public Sub setairplane(ByVal i As Integer, ByVal a As String)
            listairplane(i) = a
        End Sub

        Public Sub getairplane()
            For i = 1 To 4
                Console.WriteLine("Airplane {0}: {1}", i, listairplane(i))
            Next
        End Sub

        Public Sub add(ByRef s As Integer, ByRef m As Integer)
            s = s * 1.03
            m = m + 20
            Console.WriteLine("New speed: {0}, New number of missiles: {1}", s, m)
        End Sub

        Public Sub displayaircraft()
            displaycarrier()
            getairplane()
            add(MyBase.getspeed, MyBase.getnummissile)
        End Sub
    End Class
    Sub main()
        Dim faucon As New aircraft
        Console.WriteLine("Input speed")
        faucon.setspeed(Console.ReadLine)
        Console.WriteLine("Input length")
        faucon.setlength(Console.ReadLine)
        Console.WriteLine("Input no of missiles")
        faucon.setnummissile(Console.ReadLine)
        For i = 1 To 4
            Console.WriteLine("Input airplane")
            faucon.setairplane(i, Console.ReadLine)
        Next
        For i = 1 To 4
            Console.WriteLine("Input weapon")
            faucon.setweapon(i, Console.ReadLine)
        Next
        faucon.displayaircraft()
        Console.ReadLine()
    End Sub
End Module


Module HwInherit3
    Public Class employee
        Private employeeid As Integer, salary As Single, fullname As String

        Public Function getsalary()
            Return salary
        End Function

        Public Sub New() 'cannot input from method
            Console.WriteLine("Enter employeeid")
            employeeid = Console.ReadLine
            Console.WriteLine("Enter salary")
            salary = Console.ReadLine
            Console.WriteLine("Enter fullname")
            fullname = Console.ReadLine
        End Sub

        Public Function getfullname()
            Return fullname
        End Function

        Public Function getemployeeid()
            Return employeeid
        End Function
    End Class

    Public Class projectstaff : Inherits employee
        Private team, department, project(5) As String
        Public Sub New()
            Console.WriteLine("Enter team")
            team = Console.ReadLine
            Console.WriteLine("Enter department")
            department = Console.ReadLine
            For i = 1 To 5
                Console.WriteLine("Enter project" & i)
                project(i) = Console.ReadLine
            Next
        End Sub

        Public Function getdepartment()
            Return department
        End Function

        Public Sub display()
            Console.WriteLine("Team: {0}, Department: {1}", team, department)
            For i = 1 To 5
                Console.WriteLine("Project " & i & ":" & project(i))
            Next
        End Sub
    End Class

    Public Class programmer : Inherits projectstaff
        Private proglang As String

        Public Sub New()
            Console.WriteLine("Enter Programming Language")
            proglang = Console.ReadLine
        End Sub

        Public Sub calculate(ByRef s As Single, ByVal d As String)
            Select Case d
                Case "VB"
                    s = s * 1.15
                Case "Cobol"
                    s = s * 1.12
                Case "Pascal"
                    s = s * 1.08
                Case "SQL"
                    s = s * 1.16
                Case Else
                    s = s * 1.05
            End Select
            Console.WriteLine("New salary: " & s)
        End Sub

        Public Function getproglang()
            Return proglang
        End Function
    End Class
    Sub main()
        Dim nigel As New programmer
        Console.Write("Employee ID: " & nigel.getemployeeid)
        Console.WriteLine("Programming language {0} uses is {1}", nigel.getfullname, nigel.getproglang)
        nigel.display()
        nigel.calculate(nigel.getsalary, nigel.getdepartment)
        Console.ReadLine()
    End Sub
End Module
